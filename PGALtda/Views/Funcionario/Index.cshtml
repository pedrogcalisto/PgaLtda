@model IEnumerable<FuncionarioModel>
@{
    ViewData["Title"] = "Funcionarios";
}
<div class="text-center">
    <div>
        <a class="btn btn-success" role="button" asp-controller="Funcionario" asp-action="Cadastrar">Adicionar novo Funcionário</a>
    </div>

    <br />

    <h1 class="display-4"> Funcionários</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Identificador</th>
          <th scope="col">Nome</th>
          <th scope="col">Idade</th>
          <th scope="col">Cpf</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(var item in Model) 
                {
 
                     <tr>
                        <td scope="row">@item.Id</td>
                        <td>@item.Nome</td>
                        <td>@item.Idade</td>
                        <td>@item.Cpf</td>
                        <td>
                            @if (!item.JaVinculado) {
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <a type="button" class="btn btn-success" asp-controller="Funcionario" asp-route-id="@item.Id" asp-action="VincularFuncionario">Vincular Funcionario</a>
                                </div>
                            } else
                            {
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <a type="button" class="btn btn-warning" asp-controller="Funcionario" asp-route-id="@item.Id" asp-action="DesvincularFuncionarioConfirmacao">Desvincular Funcionario</a>
                                </div>
                            }
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a type="button" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Funcionarios" asp-action="InativarConfirmacao">Inativar</a>
                            </div>
                        </td>
                    </tr>

                }
            }

      </tbody>
    </table>
</div>
