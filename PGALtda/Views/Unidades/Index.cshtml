@model IEnumerable<UnidadeModel>
@{
    ViewData["Title"] = "Unidades";
}
<div class="text-center">
    <div>
        <a class="btn btn-success" role="button" asp-controller="Unidades" asp-action="Cadastrar">Adicionar nova Unidade</a>
    </div>

    <br />

    <h1 class="display-4"> Unidades</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome</th>
          <th scope="col">Cidade</th>
          <th scope="col">Cnpj</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(var item in Model) 
                {
 
                     <tr>
                        <td scope="row">@item.Id</td>
                        <td>@item.Nome</td>
                        <td>@item.Cidade</td>
                        <td>@item.Cnpj</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a type="button" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Unidades" asp-action="InativarConfirmacao">Inativar</a>
                            </div>
                        </td>
                    </tr>

                }
            }

      </tbody>
    </table>
</div>
